{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@internal/tsconfig/base.json",
  "compilerOptions": {
    "target": "ESNext", // Usa ESNext para aprovechar las características más recientes.
    "module": "ESNext", // Para módulos compatibles con ES.
    "moduleResolution": "node", // Resolución de módulos compatible con Node.js.
    "esModuleInterop": true, // Permite la interoperabilidad de módulos comunes.
    "skipLibCheck": true, // Omite la comprobación de tipos en las bibliotecas.
    "strict": true, // Activa las verificaciones de tipo estrictas.
    "resolveJsonModule": true, // Permite importar módulos JSON.
    "allowSyntheticDefaultImports": true // Permite la importación de módulos comunes sin importar su tipo predeterminado.
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
